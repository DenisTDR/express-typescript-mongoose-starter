{
    "name": "express-typescript-mongoose-starter",
    "version": "1.0.0",
    "description": "A starter for Node JS, Express, Typescript, Mongoose aplication",
    "main": "server.js",
    "scripts": {
        "dev": "concurrently --kill-others \"npm run watch-ts\"",
        "serve": "npm run build-ts & npm run start",
        "build-ts": "tsc -p src",
        "start": "node dist/server.js",
        "start-dev": "ts-node-dev --respawn --type-check ./src/server.ts"
    },
    "keywords": [
        "Node",
        "JS",
        "Express",
        "Mongo",
        "Mongoose",
        "Typescript"
    ],
    "author": "Matheus Davidson - MTDA",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.18.3",
        "cookie-parser": "^1.4.3",
        "dotenv": "^5.0.1",
        "ejs": "^2.6.1",
        "express": "^4.16.3",
        "mongoose": "^5.1.3",
        "morgan": "^1.9.0",
        "path": "^0.12.7"
    },
    "devDependencies": {
        "@types/express": "^4.11.1",
        "@types/lodash": "^4.14.109",
        "@types/mongodb": "^3.0.18",
        "@types/mongoose": "^5.0.15",
        "@types/node": "^10.1.3",
        "concurrently": "^3.5.1",
        "glob": "^7.1.2",
        "lodash": "^4.17.10",
        "ts-node-dev": "^1.0.0-pre.24",
        "typescript": "^2.8.3"
    }
}
